{
  "name": "components-catalogue",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/components-catalogue",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project components-catalogue --web",
  "targets": {
    "dev": {
      "dependsOn": ["build"]
    },
    "build": {
      "options": {
        "assets": [
          {
            "glob": "favicon.ico",
            "input": "assets/spwn/web-assets",
            "output": ""
          },
          {
            "input": "assets/spwn/brand/public",
            "glob": "*.webp",
            "output": "brand"
          },
          {
            "input": "assets/spwn/images/public",
            "glob": "*.webp",
            "output": "images"
          }
        ]
      }
    }
  }
}
